{
	"name": "rsl-vsc-focused-folder",
	"displayName": "Focused Folder",
	"description": "",
	"publisher": "rsl",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:focusedFolderView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "focusedFolderView",
				"contents": "Not selected focused folder"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "focusedFolderView",
					"name": "Focused Folder"
				}
			]
		},
		"commands": [
			{
				"command": "focusedFolderView.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "focusedFolderView.focusFolder",
				"title": "Focus Folder"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "focusedFolderView.refresh",
					"when": "view == focusedFolderView",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "focusedFolderView.focusFolder",
					"when": "explorerResourceIsFolder"
				}
			]
		},
		"configuration":{
			"title": "FocusedFolder",
			"properties": {
				"focusedFolder.lastFocusOnLoad":{
					"type":"boolean",
					"default":false,
					"description":"Focused Folder focus on restart on last"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
